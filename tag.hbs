{{!< default}}

<div class="content-area gh-outer">
<main class="site-main gh-inner">

    {{#tag}}
        <section class="term">
            <div class="term-wrapper">
                <h1 class="term-name">{{name}}</h1>
                <div class="term-description">{{description}}</div>
            </div>
        </section>
    {{/tag}}

    <div class="post-feed gh-feed">
        {{!-- featured 포스트만 먼저 출력 --}}
        {{#foreach posts}}
            {{#if featured}}
                {{> "loop"}}
            {{/if}}
        {{/foreach}}

        {{!-- featured가 아닌 포스트를 그 다음에 출력 --}}
        {{#foreach posts}}
            {{#unless featured}}
                {{> "loop"}}
            {{/unless}}
        {{/foreach}}
    </div>

</main>
</div>