{{!< default}}

<div class="content-area gh-outer">
<main class="site-main gh-inner">

    {{#tag}}
        <section class="term">
            <div class="term-wrapper">
                <h1 class="term-name">{{name}}</h1>
                <div class="term-description">{{description}}</div>
            </div>
        </section>
    {{/tag}}

    <div class="internal-tag-filter" aria-label="내부 태그 필터" role="group">
        <!-- JS에서 칩이 주입됩니다. -->
    </div>

    <div class="post-feed gh-feed">
        {{!-- 내부 태그까지 포함하여 이 태그의 포스트를 한번에 가져오기 --}}
        {{#tag}}
            {{#get "posts" filter=(concat "tag:" slug) include="tags" limit="all" as |tagPosts|}}
                {{#foreach tagPosts}}
                    {{#if featured}}
                        {{> "loop"}}
                    {{/if}}
                {{/foreach}}
                {{#foreach tagPosts}}
                    {{#unless featured}}
                        {{> "loop"}}
                    {{/unless}}
                {{/foreach}}
            {{/get}}
        {{/tag}}
    </div>

</main>
</div>