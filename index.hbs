{{!< default}}

<div class="content-area">
  <main class="site-main kg-width-full">
    {{#get "tags" limit="all" include="count.posts"}}
      <div class="tag-feed carousel owl">
        {{#foreach tags}}
          <div class="tag u-placeholder">
            {{#if feature_image}}
              <img class="tag-image lazyload u-object-fit"
                {{!-- data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 750w, {{img_url feature_image size="l"}} 960w" --}}
                data-src="{{img_url feature_image}}"
                {{!-- data-sizes="auto" --}}
                alt="{{title}}"
              >
            {{/if}}
            <div class="tag-content">
              <h2 class="tag-name">{{name}}</h2>
              <div class="tag-description">{{description}}</div>
              <div class="tag-count">{{plural count.posts empty='No posts' singular='% post' plural='% posts'}}</div>
            </div>
            <a class="u-permalink" href="{{url}}"></a>
          </div>
        {{/foreach}}
      </div>
    {{/get}}
  </main>
</div>