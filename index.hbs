{{!< default}}

<style>
  .owl .owl-prev:before {
    content: "{{t 'Prev'}}";
  }
  .owl .owl-next:before {
    content: "{{t 'Next'}}";
  }
</style>

<div class="content-area">
  <main class="site-main kg-width-full">
    {{#get "tags" limit="all" include="count.posts"}}
      <div class="tag-feed owl">
        {{#foreach tags}}
          <div class="tag u-placeholder">
            {{#if feature_image}}
              <img class="tag-image lazyload u-object-fit"
                data-src="{{img_url feature_image}}"
                alt="{{title}}"
              >
            {{/if}}
            <div class="tag-content">
              <h2 class="tag-name">{{name}}</h2>
              <div class="tag-description">{{description}}</div>
              <div class="tag-count">{{plural count.posts empty=(t 'No posts') singular=(t '1 post') plural=(t '% posts')}}</div>
            </div>
            <a class="u-permalink" href="{{url}}"></a>
          </div>
        {{/foreach}}
      </div>
    {{/get}}
  </main>
</div>